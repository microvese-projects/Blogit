<h1><%= @user.name %>'s Posts</h1>
<div class='container'>
  <%= render 'shared/profile', user: @user%>

  <ul>
    <%@posts.each do |post|%>
      <%= link_to user_post_path(@user, post.id) do %>
        <li class='space'>
          <div class='post'>
            <h3><%= post.title%></h3>
            <p><%= post.text%></p>
            <%= render 'shared/counts', post: post%>
          </div>
          <%= render 'shared/comments', comments: post.recent_comments.reverse, post: post%>
        </li>
      <% end %>
    <%end%>
  </ul>

  <button class='see-all' >Pagination</button>
</div>