<h1><%= @user.name %>'s Posts</h1>
<div class='container'>
  <%= render 'shared/profile', user: @user%>

  <ul>
    <%@posts.each do |post|%>
      <li class='space'>
        <%= link_to user_post_path(@user, post.id) do %>
        <div class='post'>
          <h3><%= post.title%></h3>
          <p><%= post.text%></p>
          <%= render 'shared/counts', post: post%>
        </div>
        <% end %>
        <%= render 'shared/comments', comments: post.recent_comments.reverse%>
      </li>
    <%end%>
  </ul>
</div>