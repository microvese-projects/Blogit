<div class='container'>
  <div class='post'>
    <div class='title'>
      <h1><%= @post.title %> by <%=@post.author.name %></h1>
      <%= render 'shared/counts', post: @post %>
    </div>
    <p><%= @post.text %></p>
  </div>
  <%= render 'shared/comments', comments: @post.comments%>

  <%= button_to 'Add Comment',  new_user_post_comment_path(params[:user_id], @post), class: 'create-comment', method: :get %>
</div>
